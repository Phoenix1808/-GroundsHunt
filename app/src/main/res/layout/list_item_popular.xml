<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true">

    <!-- Small Thumbnail Image -->
    <ImageView
        android:id="@+id/popular_ground_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_football_field"
        android:contentDescription="Ground Thumbnail"
        android:background="@drawable/rounded_image_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Text Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/popular_ground_thumbnail"
        app:layout_constraintEnd_toStartOf="@id/popular_rating"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Ground Name -->
        <TextView
            android:id="@+id/popular_ground_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greenfield Soccer"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Sport Type -->
        <TextView
            android:id="@+id/popular_sport_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football / Turf"
            android:textColor="@color/hint_light_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Rating and Distance -->
    <LinearLayout
        android:id="@+id/popular_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8 ⭐"
            android:textColor="@color/accent_teal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Distance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2 km"
            android:textColor="@color/hint_light_gray"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
