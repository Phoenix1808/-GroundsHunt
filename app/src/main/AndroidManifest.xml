<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroundsHunt">

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.GroundsHunt.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.yourpackage.groundshunt.LoginActivity"
            android:exported="false"
            android:label="Login"
            android:theme="@style/Theme.GroundsHunt" />

        <activity
            android:name="com.yourpackage.groundshunt.SignUpActivity"
            android:exported="false"
            android:label="Sign Up"
            android:theme="@style/Theme.GroundsHunt" />

        <activity
            android:name="com.yourpackage.groundshunt.ProfileSetupActivity"
            android:exported="false"
            android:label="Profile Setup"
            android:theme="@style/Theme.GroundsHunt" />

        <activity
            android:name="com.yourpackage.groundshunt.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.GroundsHunt" />

    </application>

</manifest>
